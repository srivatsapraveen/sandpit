@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6 mt-2">

        <textarea id="dataChannelSend" disabled placeholder="Press Start, enter some text, then press Send." style="width:100%;height:350px"></textarea>

        <div id="buttons">
            <button id="startButton">Start</button>
            <button id="sendButton">Send</button>
            <button id="closeButton">Stop</button>
        </div>
    </div>

    <div class="col-md-6 mt-2">
        <textarea id="dataChannelReceive" disabled style="width:100%;height:350px"></textarea>
    </div>
</div>

<input class="mytext" id="roomInput" style="display: none" value="@ViewBag.RoomID" />
<input class="mytext" id="userInput" style="display:none" value="@ViewBag.UserID" />
<script src="~/js/WebRTCChat.js"></script>

